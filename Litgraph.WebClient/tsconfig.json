{
    "compilerOptions": {
        "outDir": "./build/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": false,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": [
            "es2015", "dom"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}